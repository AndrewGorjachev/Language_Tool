<Statistics@MDBoxLayout>:
    orientation: 'vertical'
    spacing: root.width * 0.005

    MDLabel:
        bold: True
        halign: "center"
        text: 'Statistik'
        size_hint: 1, 0.25

    MDGridLayout:
        cols: 3
        spacing: root.height * 0.05
        padding: [0, root.width*0.01, 0, root.width*0.01]
        size_hint: 1, 1
#=======================================================================================================================
        MDLabel:
            bold: True
            text: 'Gesamtantworten:'
            size: self.texture_size

        MDLabel:
            id: total_answers
            bold: True
            text: '0'

        MDLabel:
            id: total_answers_percent
            bold: True
            text: '0.0%'
#=======================================================================================================================
        MDLabel:
            bold: True
            text: 'Gesamtzahl der richtigen Antworten:'
            theme_text_color: "Custom"
            text_color: (0, 1, 0, 1)
            size: self.texture_size

        MDLabel:
            id: total_of_right_answers
            theme_text_color: "Custom"
            text_color: (0, 1, 0, 1)
            bold: True
            text: '0'

        MDLabel:
            id: total_of_right_answers_percent
            theme_text_color: "Custom"
            text_color: (0, 1, 0, 1)
            bold: True
            text: '0.0%'
#=======================================================================================================================
        MDLabel:
            bold: True
            text: 'Gesamtzahl der falschen Antworten:'
            theme_text_color: "Custom"
            text_color: (1, 0, 0, 1)
            size: self.texture_size
            pos_hint: {'right': 1}

        MDLabel:
            id: total_of_wrong_answers
            theme_text_color: "Custom"
            text_color: (1, 0, 0, 1)
            bold: True
            text: '0'

        MDLabel:
            id: total_of_wrong_answers_percent
            theme_text_color: "Custom"
            text_color: (1, 0, 0, 1)
            bold: True
            text: '0.0%'
#=======================================================================================================================
        MDLabel:
            bold: True
            text: 'Gesamtzahl der WÃ¶rter in der Datenbank:'
            size: self.texture_size
            pos_hint: {'right': 1}

        MDLabel:
            id: total_of_words
            bold: True
            text: '0'

        MDLabel:
            id: total_of_words
            bold: True
            text: ''
#=======================================================================================================================