# Filename: WordsToolView.kv
#:include view/Statistics.kv


<WordsToolView>:
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        spacing: root.height * 0.01

        MDTopAppBar:
            title: "Die Worten lernen"
            left_action_items: [["arrow-left", lambda x: app.change_screen("ChooseLessonView"), "Zurück zur Lektionsauswahl"]]

        MDBoxLayout:
            orientation: 'vertical'
            padding: [root.width * 0.01, root.height * 0.01, root.width * 0.01, root.height * 0.01]
            size: root.width, root.height
            spacing: root.height * 0.01
#=======================================================================================================================
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: root.width * 0.01
                size_hint: 1, 0.75

                MDLabel:
                    bold: True
                    halign: 'left'
                    text: 'Übersetzen:'
                    font_size: 40
                    size_hint: 0.3, 1

                MDTextField:
                    mode: 'rectangle'
                    hint_text: ''
                    focus: True
                    id: word_to_check
                    disabled: True
                    font_size: 40
                    size_hint: 1.5, 1
                    halign: 'center'
                    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
#=======================================================================================================================
            Statistics:
                id:stat
#=======================================================================================================================
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: root.width * 0.01
                size_hint: 1, 0.75

                MDLabel:
                    bold: True
                    halign: 'left'
                    text: 'Ihre Antwort:'
                    font_size: 40
                    size_hint: 0.3, 1

                MDTextField:
                    mode: 'rectangle'
                    hint_text: ''
                    id: answer_to_check
                    font_size: 40
                    size_hint: 1.5, 1
                    halign: 'center'
                    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
#=======================================================================================================================
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: root.height * 0.01
                size_hint: 1, 0.5

                MDRaisedButton:
                    id: check_answer
                    text: 'Überprüfe ihre Antwort'
                    size_hint: 0.25, 1
                    on_press: root.on_press_check()
#=======================================================================================================================
            MDBoxLayout:
                orientation: 'vertical'
                spacing: root.width * 0.01
                size_hint: 1, 1

                MDTextField:
                    mode: "rectangle"
                    id: file_path
                    disabled: True
                    multiline: False
                    font_size: 25
                    size_hint: 1, 1
                    halign: 'center'
                    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]

                MDRaisedButton:
                    text: 'Datei öffnen'
                    size_hint: 1, 1
                    on_press: root.on_press_open()
#=======================================================================================================================